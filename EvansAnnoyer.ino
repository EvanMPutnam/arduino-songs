      break;
    case 3:
      l = sizeof(melody3) / sizeof(melody3[0]);
      playSong(melody3, l, MAX_NOTES);
      break;
  }

  //Wait between 1 and 10 minutes
  int x = random(1, 10);
  for (int i = 0; i < x; i++){
    //Break up the delays to avoid overflow.
    delay(1000*30);
    delay(1000*30);
  }
  
}
